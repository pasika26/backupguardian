{
  "name": "backup-guardian-backend",
  "version": "1.0.0",
  "description": "BackupGuardian backend API",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest src/**/*.test.js",
    "test:integration": "npm run test:docker && npm run test:restore && npm run test:validator",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "db:migrate": "node src/db/migrate.js",
    "db:seed": "node src/db/seed.js",
    "db:sqlite:migrate": "node src/db/sqlite-migrate.js",
    "db:sqlite:seed": "node src/db/sqlite-seed.js",
    "db:sqlite:test": "node src/db/sqlite-test-schema.js",
    "test:api": "node test-api.js",
    "test:auth": "node test-auth.js",
    "test:upload": "node test-file-upload.js",
    "test:docker": "node test-docker-runner.js",
    "test:restore": "node test-restore-automation.js",
    "test:validator": "node test-backup-validator.js",
    "test:storage": "node test-result-storage.js",
    "test:cleanup": "node test-cleanup-service.js"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "redis": "^5.5.6",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.0.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
